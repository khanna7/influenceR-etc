SNAP = snap-0.4
PKG_CFLAGS = $(SHLIB_OPENMP_CFLAGS) -I$(SNAP)/include -std=c99

PKG_LIBS_MPI =  -lmpi  -lutil -lpthread

PKG_LIBS = $(PKG_LIBS_MPI) $(SHLIB_OPENMP_CFLAGS) $(SNAP)/lib/.libs/libsnap.a

.PHONY: all snap

all: $(SHLIB)
$(SHLIB): snap

snap:
	(cd snap-0.4; ./configure --enable-openmp CC="$(CC)"; make)

